<%# partials/_profileDetails.ejs %>

<div class="w-full max-w-lg mx-auto md:mx-0 p-4 bg-white rounded-md shadow text-gray-900">
    <%# IMPORTANT: Added id="profile-update-form" and REMOVED action and method attributes %>
    <form id="profile-update-form">
        <div class="flex flex-col items-center mb-2">
            <div class="w-2 h-5 flex items-center justify-center rounded-full bg-gray-200 text-gray-500 text-3xl mb-1">
                <i class="fa-solid fa-user-circle"></i>
            </div>
            <span class="text-blue-600 cursor-pointer hover:underline text-xs">Add photo</span>
        </div>

        <div class="space-y-3">
            <div>
                <label for="firstname" class="block text-xs font-medium text-gray-700">First Name</label>
                <input type="text" id="firstname" name="firstname"
                    class="mt-1 block w-full px-3 py-1.5 bg-gray-50 border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm text-gray-900"
                    value="<%= user.firstname %>">
            </div>
            <div>
                <label for="lastname" class="block text-xs font-medium text-gray-700">Last Name</label>
                <input type="text" id="lastname" name="lastname"
                    class="mt-1 block w-full px-3 py-1.5 bg-gray-50 border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm text-gray-900"
                    value="<%= user.lastname %>">
            </div>
            <div>
                <label for="email" class="block text-xs font-medium text-gray-700">Email</label>
                <input type="email" id="email" name="email"
                    class="mt-1 block w-full px-3 py-1.5 bg-gray-50 border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm text-gray-900"
                    value="<%= user.email %>">
            </div>
            <div>
                <label for="mobile" class="block text-xs font-medium text-gray-700">Mobile</label>
                <input type="text" id="mobile" name="mobile"
                    class="mt-1 block w-full px-3 py-1.5 bg-gray-50 border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm text-gray-900"
                    value="<%= user.mobile || '' %>">
            </div>
        </div>

        <div class="mt-4 text-center">
            <button type="submit"
                class="py-2 px-5 rounded-md bg-gray-800 text-white text-sm hover:bg-gray-900 transition-all">
                Save Changes
            </button>
        </div>
        <%# Message display area %>
        <div id="profile-message" class="mt-3 text-center text-sm font-semibold"></div>
    </form>
</div>