<%# views/user/profile/partials/_wishlistContent.ejs %>
<h2 class="text-2xl font-bold text-white mb-6 border-b border-gray-700 pb-3">My Wishlist</h2>
<p class="text-gray-400">Your wishlist items will appear here.</p>
<%# Loop through wishlist items and display them %>
<% if (wishlistItems && wishlistItems.length > 0) { %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% wishlistItems.forEach(item => { %>
            <div class="bg-gray-800 p-4 rounded-lg flex items-center gap-4">
                <img src="<%= item.image %>" alt="<%= item.name %>" class="w-16 h-16 object-cover rounded">
                <div>
                    <p class="text-white font-semibold"><%= item.name %></p>
                    <p class="text-gray-400 text-sm">â‚¹<%= item.price %></p>
                </div>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <p class="text-gray-500">Your wishlist is empty.</p>
<% } %>