<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Brand Management</title>
  <link   rel="stylesheet" href="/styles/admin/adminnavbar.css">
  <link rel="stylesheet" href="/styles/admin/adminsidebar.css">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Custom CSS to override/enhance Tailwind or for specific elements */
    .admin-wrapper {
      display: flex;
      min-height: 100vh;
    }
    .admin-main {
      flex-grow: 1;
      padding: 2rem;
      background-color: #f8f9fa; /* Light background for the main content */
    }
    .breadcrumb {
      margin-bottom: 1.5rem;
      font-size: 0.9rem;
      color: #6c757d;
    }

    /* Table styles */
    .brand-table { /* Changed from category-table */
      width: 100%;
      border-collapse: collapse;
      margin-top: 2rem;
      background-color: #ffffff;
      box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
      border-radius: 0.5rem;
      overflow: hidden; /* Ensures rounded corners apply to content */
    }

    .brand-table th, /* Changed from category-table */
    .brand-table td { /* Changed from category-table */
      padding: 1rem 1.25rem;
      text-align: left;
      border-bottom: 1px solid #e2e8f0; /* Light gray border */
    }

    .brand-table th { /* Changed from category-table */
      background-color: #f1f5f9; /* Lighter header background */
      font-weight: 600;
      color: #334155; /* Darker text for headers */
      text-transform: uppercase;
      font-size: 0.875rem;
    }

    .brand-table tbody tr:last-child td { /* Changed from category-table */
      border-bottom: none;
    }

    .brand-table tbody tr:hover { /* Changed from category-table */
      background-color: #fbfdff; /* Subtle hover effect */
    }

    /* Switch styles (as you had them, integrated with modern look) */
    .switch {
      position: relative;
      display: inline-block;
      width: 40px;
      height: 24px;
    }

    .switch input {
      opacity: 0;
      width: 0;
      height: 0;
    }

    .slider {
      position: absolute;
      cursor: pointer;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #ccc;
      transition: .4s;
      border-radius: 24px;
    }

    .slider:before {
      position: absolute;
      content: "";
      height: 16px;
      width: 16px;
      left: 4px;
      bottom: 4px;
      background-color: white;
      transition: .4s;
      border-radius: 50%;
    }

    input:checked + .slider {
      background-color: #4CAF50; /* Green for checked */
    }

    input:focus + .slider {
      box-shadow: 0 0 1px #4CAF50;
    }

    input:checked + .slider:before {
      transform: translateX(16px);
    }

    /* Add/Edit Form specific styles */
    .add-brand-section { /* Changed from add-category-section */
      background-color: #ffffff;
      padding: 2rem;
      border-radius: 0.5rem;
      box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
      margin-top: 2rem;
    }

    .add-brand-section h2 { /* Changed from add-category-section */
      font-size: 1.75rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      color: #1a202c;
    }

    .add-brand-form label, /* Changed from add-category-form */
    #editBrandForm label { /* Changed from editCategoryForm */
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 600;
      color: #4a5568;
      margin-top: 1rem;
    }

    .add-brand-form input[type="text"], /* Changed from add-category-form */
    .add-brand-form input[type="number"], /* Changed from add-category-form */
    .add-brand-form textarea, /* Changed from add-category-form */
    .add-brand-form input[type="file"], /* Added for file input */
    #editBrandForm input[type="text"], /* Changed from editCategoryForm */
    #editBrandForm input[type="number"], /* Changed from editCategoryForm */
    #editBrandForm textarea, /* Changed from editCategoryForm */
    #editBrandForm input[type="file"] { /* Added for file input */
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #cbd5e0;
      border-radius: 0.375rem;
      font-size: 1rem;
      box-sizing: border-box; /* Ensures padding doesn't increase width */
      transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

    .add-brand-form input[type="text"]:focus, /* Changed from add-category-form */
    .add-brand-form input[type="number"]:focus, /* Changed from add-category-form */
    .add-brand-form textarea:focus, /* Changed from add-category-form */
    .add-brand-form input[type="file"]:focus, /* Added for file input */
    #editBrandForm input[type="text"]:focus, /* Changed from editCategoryForm */
    #editBrandForm input[type="number"]:focus, /* Changed from editCategoryForm */
    #editBrandForm textarea:focus, /* Changed from editCategoryForm */
    #editBrandForm input[type="file"]:focus { /* Added for file input */
      border-color: #4299e1; /* Blue focus border */
      box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.5); /* Blue glow */
      outline: none;
    }
    .add-brand-form textarea, #editBrandForm textarea { /* Changed from add-category-form */
        min-height: 80px; /* Give description a bit more height */
        resize: vertical;
    }

    /* Modal styles */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000; /* Higher z-index to ensure it's on top */
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.6); /* Slightly darker overlay */
      display: flex; /* Use flexbox for centering */
      justify-content: center;
      align-items: center;
    }

    .modal-content {
      background: #fff;
      padding: 30px; /* Increased padding */
      border-radius: 12px; /* More rounded corners */
      width: 90%;
      max-width: 450px; /* Slightly wider modal */
      position: relative;
      animation: fadeIn 0.3s ease-in-out;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23); /* More pronounced shadow */
    }
    

    .modal-content h2 {
      margin-top: 0;
      margin-bottom: 1.5rem; /* Space below title */
      font-size: 1rem;
      color: #1a202c;
      text-align: center;
    }

    .modal-content .close {
      position: absolute;
      right: 15px;
      top: 10px;
      font-size: 28px; /* Larger close button */
      cursor: pointer;
      color: #a0aec0; /* Lighter color */
      transition: color 0.2s ease;
    }

    .modal-content .close:hover {
      color: #e53e3e; /* Red on hover */
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-20px) scale(0.95); }
      to { opacity: 1; transform: translateY(0) scale(1); }
    }

  </style>
</head>
<body>

<%- include('../partials/admin/adminnavbar') %>

<div class="admin-wrapper">
  <%- include('../partials/admin/adminsidebar', { current: 'brand' }) %> <div class="admin-main" style="margin-left: 250px; margin-top: 85px;">
    <div class="breadcrumb">Admin > Brand</div> <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4 text-gray-800">Existing Brands</h2> <table class="brand-table"> <thead>
            <tr>
              <th>No</th>
              <th>Brand Name</th> <th>Description</th>
              <th>Offer (%)</th>
              <th>Image</th> <th>List / Unlist</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
      <% if (brands.length > 0) { %> <% brands.forEach((brand, index) => { %> <tr>
            <td><%= index + 1 %></td>
            <td><%= brand.name %></td>
            <td><%= brand.description || 'N/A' %></td>
            <td><%= brand.offer %>%</td>
            <td>
              <% if (brand.image) { %>
                <img src="/uploads/brands/<%= brand.image %>" alt="<%= brand.name %> Image" class="w-16 h-16 object-cover rounded-md">
              <% } else { %>
                N/A
              <% } %>
            </td>
            <td>
              <form action="/admin/brand/toggle/<%= brand._id %>" method="POST"> <label class="switch">
                  <input type="checkbox" name="status" onchange="this.form.submit()" <%= brand.isListed ? 'checked' : '' %>>
                  <span class="slider round"></span>
                </label>
              </form>
            </td>
            <td>
                <button type="button" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg inline-flex items-center transition-colors duration-200"
                        onclick="openEditModal('<%= brand._id %>', '<%= brand.name %>', '<%= brand.description %>', '<%= brand.offer %>', '<%= brand.image %>')">
                    <i class="fas fa-pen mr-2"></i> Edit
                </button>
                <form action="/admin/brand/delete/<%= brand._id %>" method="POST" style="display:inline;"> <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg inline-flex items-center ml-2 transition-colors duration-200"
                            onclick="return confirm('Are you sure you want to delete <%= brand.name %>? This action cannot be undone.')">
                        <i class="fas fa-trash mr-2"></i> Delete
                    </button>
                </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="6" class="text-center py-4 text-gray-500">No brands found.</td> </tr>
      <% } %>
    </tbody>
        </table>
    </div>

    <div class="add-brand-section mt-8"> <h2>ADD NEW BRAND</h2> <form action="/admin/brand/add" method="POST" class="add-brand-form" enctype="multipart/form-data"> <label for="name">Name:</label>
        <input type="text" id="name" name="name" required class="mt-1" placeholder="Enter brand name" />

        <label for="description">Description:</label>
        <textarea id="description" name="description" class="mt-1" rows="3" placeholder="Short description about the brand"></textarea>

        <label for="offer">Offer (%):</label>
        <input type="number" id="offer" name="offer" min="0" max="100" value="0" class="mt-1" placeholder="e.g., 10 for 10% off" />

        <label for="image">Brand Image:</label>
        <input type="file" id="image" name="image" accept="image/*" required class="mt-1" />

        <label for="isListedAdd" class="block mt-4">Status:</label>
        <label class="switch">
          <input type="checkbox" id="isListedAdd" name="isListed" checked>
          <span class="slider round"></span>
        </label>

        <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-lg mt-6 w-full transition-colors duration-200 text-lg">
            <i class="fas fa-plus-circle mr-2"></i> Add Brand
        </button>
      </form>
    </div>
  </div>
</div>

<div id="editModal" class="modal">
  <div class="modal-content">
    <span class="close" onclick="closeModal()">&times;</span>
    <h2 class="text-2xl font-bold mb-1">Edit Brand</h2> <form id="editBrandForm" method="POST" enctype="multipart/form-data"> <label for="editName">Brand Name:</label> <input type="text" id="editName" name="name" required class="mt-1 mb-4" />

      <label for="editDescription">Description:</label>
      <textarea id="editDescription" name="description" class="mt-0 mb-1" rows="1"></textarea>

      <label for="editOffer">Offer (%):</label>
      <input type="number" id="editOffer" name="offer" min="0" max="100" class="mt-0 mb-1" />

      <label for="currentImage" class="block mt-4">Current Image:</label>
      <img id="currentImage" src="" alt="Current Brand Image" class="w-24 h-14 object-cover rounded-md mb-1 border border-gray-300">

      <label for="editImage">Change Image (optional):</label>
      <input type="file" id="editImage" name="image" accept="image/*" class="mt-0 mb-1" />

      <input type="hidden" id="editId" />
      <button type="submit" class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-1 px-6 rounded-lg w-full transition-colors duration-200 text-lg mt-1">
          <i class="fas fa-save mr-2"></i> Update Brand
      </button>
    </form>
  </div>
</div>

<script>
  function openEditModal(id, name, description, offer, image) {
    event?.preventDefault();

    document.getElementById("editName").value = name;
    document.getElementById("editDescription").value = description === 'N/A' ? '' : description;
    document.getElementById("editOffer").value = offer;
    document.getElementById("editId").value = id;
    
    // Set the current image source
    const currentImageElement = document.getElementById("currentImage");
    if (image) {
        currentImageElement.src = `/uploads/brands/${image}`;
        currentImageElement.style.display = 'block'; // Show image if available
    } else {
        currentImageElement.src = '';
        currentImageElement.style.display = 'none'; // Hide if no image
    }
    
    document.getElementById("editBrandForm").action = `/admin/brand/edit/${id}`; // Changed form id
    document.getElementById("editModal").style.display = "flex";
  }

  function closeModal() {
    document.getElementById("editModal").style.display = "none";
  }

  // Optional: close modal on outside click
  window.onclick = function (event) {
    const modal = document.getElementById("editModal");
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }
</script>

</body>
</html>